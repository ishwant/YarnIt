<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    android:gravity="center">
    <LinearLayout style="@style/AllCardsLayout">
        <android.support.v7.widget.CardView
            android:id="@+id/orderId"
            style="@style/cardViewStyle">

            <LinearLayout style="@style/cardLinearLayout">

                <ImageView
                    android:background="@drawable/circlebackground_purple"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    style="@style/cardImageView" />

                <TextView
                    android:text="@string/orderCard"
                    style="@style/dashboardCardTitleStyle" />

                <View style="@style/cardDividingLineView" />

                <TextView
                    android:text="@string/orderCardSubtitle"
                    style="@style/CardSubTitleStyle" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/profilId"
            style="@style/cardViewStyle">

            <LinearLayout style="@style/cardLinearLayout">

                <ImageView
                    android:background="@drawable/circlebackground_pink"
                    android:src="@drawable/ic_person_black_24dp"
                    style="@style/cardImageView"/>

                <TextView
                    android:text="@string/profileCard"
                    style="@style/dashboardCardTitleStyle" />

                <View style="@style/cardDividingLineView" />

                <TextView
                    android:text="@string/profileCardSubtitle"
                    style="@style/CardSubTitleStyle" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>